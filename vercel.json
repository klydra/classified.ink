{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "outputDirectory": "web/dist",
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "functions": {
    "api/entry/vercel.ts": {
      "runtime": "edge",
      "includeFiles": "api/elysia/*.ts,api/elysia/**/*.ts,api/drizzle/*.ts"
    }
  },
  "rewrites": [
    {
      "source": "/public/:match*",
      "destination": "/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/api/entry/vercel"
    }
  ]
}